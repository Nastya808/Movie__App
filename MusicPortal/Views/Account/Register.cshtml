@model MusicPortal.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mx-auto p-8 max-w-md">
    <h1 class="text-3xl font-bold mb-6 text-center">Register for Music Portal</h1>
    <form asp-action="Register" method="post" class="bg-white shadow-lg rounded-lg p-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div class="form-group mb-4">
            <label for="Username" class="block text-gray-700 font-medium">Username</label>
            <input asp-for="Username" id="Username" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" placeholder="Enter your username" />
            <span asp-validation-for="Username" class="text-red-500 text-sm mt-1"></span>
        </div>

        <div class="form-group mb-4">
            <label for="Email" class="block text-gray-700 font-medium">Email</label>
            <input asp-for="Email" id="Email" type="email" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-red-500 text-sm mt-1"></span>
        </div>

        <div class="form-group mb-4">
            <label for="Password" class="block text-gray-700 font-medium">Password</label>
            <input asp-for="Password" id="Password" type="password" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-red-500 text-sm mt-1"></span>
        </div>

        <div class="form-group mb-4">
            <label for="ConfirmPassword" class="block text-gray-700 font-medium">Confirm Password</label>
            <input asp-for="ConfirmPassword" id="ConfirmPassword" type="password" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm mt-1"></span>
        </div>

        <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
