@{
    ViewData["Title"] = "Logout";
}

<div class="container mx-auto p-8 max-w-md">
    <h1 class="text-3xl font-bold mb-6 text-center">Logout</h1>
    <div class="bg-white shadow-lg rounded-lg p-6">
        <p class="text-gray-700 mb-4">Are you sure you want to log out?</p>
        <form asp-action="Logout" method="post">
            @Html.AntiForgeryToken()
            <div class="flex justify-center space-x-4">
                <button type="submit" class="py-2 px-4 bg-red-600 text-white font-semibold rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">Logout</button>
                <a href="@Url.Action("Index", "Home")" class="py-2 px-4 bg-gray-200 text-gray-800 font-semibold rounded-md hover:bg-gray-300">Cancel</a>
            </div>
        </form>
    </div>
</div>
