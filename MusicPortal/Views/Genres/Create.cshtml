@model MusicPortal.Models.Genre

@{
    ViewData["Title"] = "Create Genre";
}

<div class="container mx-auto p-6">
    <h1 class="text-4xl font-bold mb-6">Create Genre</h1>
    <form asp-action="Create" method="post" class="space-y-4">
        <div class="form-group">
            <label class="block text-gray-700">Name</label>
            <input asp-for="Name" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" />
            <span asp-validation-for="Name" class="text-red-500"></span>
        </div>
        <button type="submit" class="btn btn-blue mt-4 px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700">Create</button>
    </form>
</div>
