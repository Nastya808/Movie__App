@model MusicPortal.Models.Song

@{
    ViewData["Title"] = "Delete Song";
}

<div class="max-w-lg mx-auto p-6 bg-white shadow-lg rounded-lg">
    <h2 class="text-2xl font-bold mb-4">Delete Song</h2>

    <div class="mb-6">
        <h3 class="text-lg font-semibold mb-2">Are you sure you want to delete this song?</h3>
        <dl class="space-y-2">
            <div class="flex">
                <dt class="font-medium text-gray-700 w-24">Title:</dt>
                <dd class="text-gray-900">@Model.Title</dd>
            </div>
            <div class="flex">
                <dt class="font-medium text-gray-700 w-24">Artist:</dt>
                <dd class="text-gray-900">@Model.Artist</dd>
            </div>
            <div class="flex">
                <dt class="font-medium text-gray-700 w-24">Genre:</dt>
                <dd class="text-gray-900">@Model.Genre.Name</dd>
            </div>
        </dl>
    </div>

    <form method="post" class="flex justify-end space-x-4">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">Delete</button>
        <a href="@Url.Action("Index")" class="bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500">Cancel</a>
    </form>
</div>
