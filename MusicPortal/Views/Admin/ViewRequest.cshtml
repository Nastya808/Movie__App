@model MusicPortal.Models.RegistrationRequest

<h1 class="text-3xl font-bold mb-4">Registration Request Details</h1>

<div class="mb-4">
    <strong>Username:</strong> @Model.Username
</div>
<div class="mb-4">
    <strong>Email:</strong> @Model.Email
</div>

@if (!Model.IsApproved)
{
    <form method="post" action="@Url.Action("ApproveRequest", "RegistrationRequests")">
        @Html.AntiForgeryToken()
        <input type="hidden" name="requestId" value="@Model.Id" />
        <button type="submit" class="text-blue-500 hover:text-blue-700">Approve</button>
    </form>
    <form method="post" action="@Url.Action("RejectRequest", "RegistrationRequests")" class="inline">
        @Html.AntiForgeryToken()
        <input type="hidden" name="requestId" value="@Model.Id" />
        <button type="submit" class="text-red-500 hover:text-red-700">Reject</button>
    </form>
}
else
{
    <span class="text-green-500">Approved</span>
}
