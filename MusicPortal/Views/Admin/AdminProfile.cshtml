@model MusicPortal.ViewModels.AdminProfileViewModel

@{
    ViewData["Title"] = "Admin Profile";
}

<h1 class="text-3xl font-bold mb-4">Admin Profile</h1>

<div class="bg-white p-6 rounded-lg shadow-md mb-6">
    <h2 class="text-xl font-semibold mb-2">Administrator Information</h2>
    <p><strong>Username:</strong> @Model.UserName</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<div class="bg-white p-6 rounded-lg shadow-md mb-6">
    <h2 class="text-xl font-semibold mb-2">Manage Users</h2>
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">@user.UserName</td>
                    <td class="px-6 py-4 whitespace-nowrap">@user.Email</td>
                    <td class="px-6 py-4 whitespace-nowrap flex space-x-2">
                        <a href="@Url.Action("EditUser", "Admin", new { userId = user.Id })" class="text-blue-500 hover:text-blue-700">Edit</a>
                        <form action="@Url.Action("DeleteUser", "Admin", new { userId = user.Id })" method="post" class="inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="text-red-500 hover:text-red-700">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-2">Manage Roles</h2>
    <ul class="list-disc pl-5">
        @foreach (var role in Model.Roles)
        {
            <li class="mb-2">@role.Name</li>
        }
    </ul>
</div>
